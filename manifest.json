{
	"manifest_version": 2,
	"name": "Untamed Now Playing",
	"version": "0.6.1",
	"description": "Saves 'now playing' data locally, which inturn can be displayed on an XSplit overlay",
	"update_url": "http://ipaddr.me/unp/updates.xml",
	"background": { "scripts": ["lib/jquery-2.0.2.min.js", "lib/proxy.js", "lib/pages/background.js"] },
	"options_page": "options.html",
	"plugins": [{"path": "lib/npNPAPIFileIOforChrome.dll", "public": false}],
	"icons":{
		"128":"ico/main_128.png"
	},
	"browser_action": {
		"default_title": "Untamed Now Playing",
		"default_icon": "ico/icon.png"
	},
	"permissions": [
		"tabs",
		"*://8tracks.com/*",
		"*://*.8tracks.com/*",
		"*://ah.fm/*",
		"*://www.ah.fm/*",
		"*://blinkboxmusic.com/*",
		"*://*.blinkboxmusic.com/*",
		"*://deezer.com/*",
		"*://*.deezer.com/*",
		"*://di.fm/*",
		"*://www.di.fm/*",
		"*://www.distortionradio.com/*",
		"*://distortionradio.com/*",
		"*://grooveshark.com/*",
		"*://www.grooveshark.com/*",
		"*://retro.grooveshark.com/*",
		"*://hypem.com/*",
		"*://iheart.com/*",
		"*://*.iheart.com/*",
		"*://jango.com/*",
		"*://www.jango.com/*",
		"*://last.fm/*",
		"*://*.last.fm/*",
		"*://lastfm.de/*",
		"*://*.lastfm.de/*",
		"*://lastfm.es/*",
