		"*://zaycev.fm/*",
		"*://www.zaycev.fm/*",
		"*://api.justin.tv/*",
		"*://api.own3d.tv/*",
		// di.fm cdn
		"*://static.audioaddict.com/*",
		// distortionradio cdn
		"*://images.distortionradio.com/*",
		// grooveshark cdn
		"*://*.gs-cdn.net/*",
		"*://images.grooveshark.com/*",
		// jango cdn
		"*://*.images.jango.com/*",
		// pandora cdn
		"*://*.p-cdn.com/*",
		// play.google cdn
		"*://*.googleusercontent.com/*",
		// play.spotify cdn
		"*://*.cloudfront.net/*",
		// slacker cdn
		"*://*.slkimg.com/*",
		// soundcloud cdn
		"*://*.sndcdn.com/*",
		// songza and turntable cdns
		"*://cdn.7static.com/*",
		"*://images.mndigital.com/*",
		"*://images.musicnet.com/*",
		// youtube cdn
		"*://*.ytimg.com/*"
	],
	"content_scripts": [ {
