		"*://lastfm.com.tr/*",
		"*://*.lastfm.com.tr/*",
		"*://nightbot.tv/*",
		"*://www.nightbot.tv/*",
		"*://pandora.com/*",
		"*://*.pandora.com/*",
		"*://piki.fm/*",
		"*://play.google.com/*",
		"*://play.spotify.com/*",
		"*://plug.dj/*",
